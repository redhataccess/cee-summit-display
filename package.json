{
  "name": "summit-display",
  "version": "1.0.0",
  "description": "A display for Red Hat Summit 2016",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf build",
    "build": "npm run clean && npm run mk-build-dir && npm run copy-assets & npm run build-client && npm run build-server",
    "copy-assets": "npm run mk-build-dir && cp -r client/* build/client/",
    "mk-build-dir": "mkdir -p build/{client,server}",
    "build-client": "./node_modules/.bin/browserify client/main.js -o build/client/bundle.js -dv -t [ babelify --presets [ es2015 ] ]",
    "watch-client": "./node_modules/.bin/watchify client/main.js -o build/client/bundle.js -dv -t [ babelify --presets [ es2015 ] ]",
    "build-server": "./node_modules/.bin/babel server/ --out-dir build/server/",
    "watch-server": "./node_modules/.bin/babel-watch server/server.js",
    "bs-sync": "browser-sync start --server --port 8080 --index index.html -f 'build' './'",
    "start": "npm run mk-build-dir && npm run copy-assets & npm run start-server & npm run watch-client & npm run watch-server & npm run bs-sync",
    "start-server": "nodemon --watch build/server build/server/server.js"
  },
  "author": "Michael Clayton <mclayton@redhat.com>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-watch": "^2.0.2",
    "babelify": "^7.3.0",
    "browser-sync": "^2.12.8",
    "browserify": "^13.0.1",
    "eslint": "^2.10.2",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-react": "^5.1.1",
    "nodemon": "^1.9.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "console-stamp": "^0.2.2",
    "hapi": "^13.4.0",
    "hapi-plugin-websocket": "^0.9.2",
    "lodash": "^4.12.0",
    "reconnectingwebsocket": "^1.0.0",
    "springy": "^2.7.1",
    "three": "^0.77.1",
    "ws": "^1.1.0"
  }
}
